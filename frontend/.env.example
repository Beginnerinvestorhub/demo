NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# Frontend Environment Variables (Next.js)
# Copy this file to .env.local and fill in your actual values

# API URLs (update with your deployed backend URLs)
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
NEXT_PUBLIC_PYTHON_ENGINE_URL=http://localhost:8000
NEXT_PUBLIC_MARKET_DATA_WS_URL=ws://localhost:8080/ws/market-data # Example WebSocket URL for market data

# Portfolio Simulation Service URL (from GCP deployment)
NEXT_PUBLIC_PORTFOLIO_SIMULATION_URL=https://portfolio-simulation-beginnerinvestorhub-5eb71.us-central1.run.app

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Firebase Admin SDK Configuration (Server-side) - Required for NextAuth
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n"

# Demo User Configuration (for production demo purposes)
# Set DEMO_MODE_ENABLED=true to enable demo user login
DEMO_MODE_ENABLED=false
DEMO_USER_EMAIL=demo@beginnerinvestorhub.com
DEMO_USER_PASSWORD=
DEMO_USER_DISPLAY_NAME=Demo User
DEMO_USER_UID=demo-user-prod-001
